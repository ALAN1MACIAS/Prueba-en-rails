<% name ||= "Titulo" %>
<div class="container">
  <h1><%= name %> art√≠culo</h1>
  <%= form_for @articles do |f| %>
    <% @articles.errors.full_messages.each do |message| %>
      <div class="alert alert-warning" role="alert"><%= message %></div>
    <% end %>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.text_field :title, placeholder: "Titulo del articulo", class: "form-control"%>
        </div>
      </div>
      <div class="col-md-12">
        <div class="form-group">
          Portada: <%= f.file_field :cover, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-12">
        <div class="form-group">
          <%= f.text_area :body, placeholder: "Escribe aqui el articulo", class: "form-control", style: "height: 250px" %>
        </div>
      </div>
      <div class="col-md-12">
        <div class="form-group">
          <%= f.submit "Guardar", disable_with: 'Guardando...', class: "btn btn-sm btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>